global_defs {
    dynamic_interfaces
}

vrrp_instance VI_1 {
    state {{ role }}
    interface {{ ansible_interfaces | select('match','zt*') | list | first }}
    virtual_router_id 51
    priority 101
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass  {{ keepalived_password }}
    }
    virtual_ipaddress {
        {{ loadbalancers_vip }}
    }
}
